# ===========================================
# SalesBook Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Used by docker-compose.yml and docker-compose.prod.yml

# -------------------------------------------
# Database
# -------------------------------------------

# MySQL root password (for initial setup)
DB_ROOT_PASSWORD=your_secure_root_password

# MySQL application user password
DB_PASSWORD=your_secure_app_password

# -------------------------------------------
# Authentication (Required)
# -------------------------------------------

# JWT secret key (min 64 characters)
# Generate: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-change-this

# -------------------------------------------
# Encryption (Required)
# -------------------------------------------

# 32-byte hex key for encrypting credentials
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=your32byteencryptionkeyinhexformat00

# -------------------------------------------
# Application URLs (Production)
# -------------------------------------------

# Your domain (for CORS and link generation)
APP_URL=https://yourdomain.com
CLIENT_URL=https://yourdomain.com

# -------------------------------------------
# Email - SMTP (Optional)
# -------------------------------------------

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# -------------------------------------------
# Email - API Providers (Optional)
# -------------------------------------------

MANDRILL_API_KEY=
SENDGRID_API_KEY=

# -------------------------------------------
# SMS/Voice - Twilio (Optional)
# -------------------------------------------

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -------------------------------------------
# WhatsApp Business API (Optional)
# -------------------------------------------

WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# -------------------------------------------
# Telegram (Optional)
# -------------------------------------------

TELEGRAM_BOT_TOKEN=

# -------------------------------------------
# Logging
# -------------------------------------------

LOG_LEVEL=info
